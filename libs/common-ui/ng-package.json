{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/common-ui",
  "lib": {
    "entryFile": "src/index.ts",
    "styleIncludePaths": ["src/styles"]
  },
  "assets": [
    "CHANGELOG.md",
    {
      "glob": "**/*.scss",
      "input": "./src/styles",
      "output": "/styles"
    },
    {
      "glob": "**/*",
      "input": "./src/assets",
      "output": "/assets"
    },
    {
      "glob": "**/*",
      "input": "./webviewer/src/assets",
      "output": "/webviewer/assets"
    }
  ]
}
